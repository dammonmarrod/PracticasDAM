<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Alert y prompt</title>
	
	<script type="text/javascript">

		var contNumerosIntroducidos=0; //aumenta cada vez que se introduce un número válido
		var sumaTodosValores=0; //sumará todos los valores válidos.
		var numerosRecogidos=0;


		do{
			numerosRecogidos= prompt("Introduce un número:");
			//Se dan tres situaciones
			//Que no introduzca nada y de a cancelar ==null
			//Que no introduzca nada y se de a aceptar =="" y luego a cancelar >>Me da error se va del bucle


			//Que no introduzca nada y se de a aceptar == ""

			if(numerosRecogidos == null){
				alert("Opcion no valida; tienes que introducir un número");
			}
			else if(numerosRecogidos==" "){// el usuario a dado a aceptar pero no ha introducido nada
				alert("opcion no valida; tiene que introducir un número");

			}
			else{//En caso de que introduzca algo y de aceptar o cancelar
				if((isNaN(numerosRecogidos))){//Si no es número
					alert("Has introducido un valor NO Numerico");
				}
				else{//es número
					//Tendre que ir sumando los valores
					sumaTodosValores += numerosRecogidos;
					//y aumento el contador
					contNumerosIntroducidos ++;
				}

			}

		}while((contNumerosIntroducidos <=0)|| (numerosRecogidos !=null)); //Condicion a cumplir que HAYA UN NÚMERO INTRODUCIDO y se de a cancelar. Mientras se seguirá repitiendo
		
		media=sumaTodosValores/contNumerosIntroducidos;


		//Muestro en un alert la media de los valores introducidos
		resultado= "La media de los valores introducidos es: " + media;
		alert(resultado);
	</script>


</head>
<body>
</body>
</html>
